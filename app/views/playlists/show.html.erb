Playlist <%= "#{@spoti_playlist_id}" %>

<% @tracks.each do |track| %>
    <p>
        <%= "#{track.name} - #{track.artists.first.name}  _  #{track.album.name}" %>
    </p>
<% end %>

<%= form_tag({ controller: :search, action: :index }, method: "get") do %>
  <%= hidden_field_tag :spoti_playlist_id, @spoti_playlist_id %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
